---
import "../styles/tailwind.css";
import "../styles/global.css";

const { title = "Mathéo ROSE — Portfolio", fonts = "Inter" } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>

    <!-- Fonts (au choix) -->
    <link rel="stylesheet" href="/fonts.css" />

    <meta name="color-scheme" content="light only" />
  </head>
  <body class="min-h-screen bg-white text-[#111111] overflow-hidden font-[Inter,_system-ui,_-apple-system,_'Segoe_UI',_Roboto,_Arial,_sans-serif] tracking-[0.01em]">
    <slot />
  </body>
</html>
