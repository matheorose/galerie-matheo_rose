---
import BaseLayout from "../layouts/BaseLayout.astro";
import LightCurtain from "../components/LightCurtain.astro";
import ArrowNav from "../components/ArrowNav.astro";
import { projects } from "../data/projects";

const first = projects[0];
---
<BaseLayout title="Mathéo ROSE — Portfolio">
  <LightCurtain />

  <main class="relative flex h-screen w-screen items-center justify-center px-[6vw] py-[6vh]">
    <header class="absolute left-1/2 top-[28vh] -translate-x-1/2 text-center tracking-[0.06em]">
      <div class="font-['Space_Grotesk',_Inter,_sans-serif] text-[clamp(22px,3.8vw,44px)] font-semibold">MATHEO ROSE</div>
      <div class="mt-[6px] text-[clamp(12px,1.3vw,16px)] text-[#5A5A5A]">Développeur polyvalent · France</div>
    </header>

    <a
      class="absolute left-1/2 top-3/5 -translate-x-1/2 -translate-y-1/2 text-[clamp(14px,1.5vw,18px)] border-1 rounded-full border-black/10 px-6 py-3 text-[#111] opacity-100 backdrop-blur-md transition hover:opacity-60"
      href={`/${first.slug}`}
      data-transition
    >
      Visiter la galerie
    </a>
  </main>

</BaseLayout>
